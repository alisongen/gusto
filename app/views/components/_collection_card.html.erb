<div class="collection-card">
  <div class="collection-info">
    <div class="collection-info-detail">
      <div class="collection-color" style="background-color: <%= collection.color %>; height: 24px; width: 50px; display: flex; justify-content: center; align-items: center; border-radius: 5px;">
        <p style="margin: 0;"><%= collection.emoji %></p>
      </div>
      <h3><%= collection.name %></h3>
    </div>
    <div class="collection-info-btn">
      <p><%= collection.saved_restaurants.count %> restaurants</p>
      <div class="collection-btn">
        <%= link_to collection_path(collection), class: "btn-delete", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <%= image_tag "delete.svg", class: "btn-delete" %>
        <% end %>
        <%= link_to collection_path(collection), class: "collection-btn-see" do %>
          <%= image_tag "arrow.svg", height: 20, width: 20 %>
        <% end %>
      </div>
    </div>
  </div>
</div>
