<div class="restaurant-feed-card">
  <%#= image_tag saved_restaurant.restaurant.images %>
  <%= image_tag saved_restaurant.restaurant.images.sample, class: "restaurant-feed-image" %>
  <div class="restaurant-feed-content">
    <h5 class="restaurant-feed-title"><%= saved_restaurant.user.username %> a ajouté</h5>
    <p class="restaurant-feed-text"><%= saved_restaurant.restaurant.name %></p>
    <% saved_restaurant.collections.each do |collection| %>
      <p class="restaurant-feed-text">à <%= collection.name %></p> <!--TODO: Possible d'afficher que la Ville+CodePostal-->
    <% end %>
    <p class="restaurant-feed-time">
      <%= time_ago_in_words(saved_restaurant.created_at) %> ago
    </p>
  </div>
</div>
