<div class="review-feed-card">
  <%= cl_image_tag review.saved_restaurant.restaurant.images.first.key, class: "review-feed-image" %>
  <div class="review-feed-content">
    <h5 class="review-feed-title"><%= review.user.username %> a laiss√© une review</h5>
    <p class="review-feed-text"><%= truncate(review.content, length: 30) %></p>
    <div class="review-feed-info">

      <div class="feed-restaurant-card-rating">
        <% full_stars = review.user_rating.to_i %>
        <% empty_stars = 5 - full_stars %>
        <% full_stars.times do %>
          <%= image_tag "star-fill.svg", width: 20, height: 20 %>
        <% end %>
        <% empty_stars.times do %>
          <%= image_tag "star.svg", width: 20, height: 20 %>
        <% end %>
      </div>

      <!-- <p class="review-feed-rating">Note : <%= review.user_rating %></p> -->

      <p class="review-feed-time review-feed-info">
        <%= time_ago_in_words(review.created_at) %> ago
      </p>
    </div>
  </div>
</div>
