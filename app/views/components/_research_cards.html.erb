<div class="card-container">
  <% @restaurants.each_with_index do |restaurant, index| %>
    <%# Et pour chaque "restaurant", j'affiche les infos (name et address), la possibilitÃ© de l'ajouter Ã  une collection via l'icon %>
    <%# et le lien cers la show du restaurant %>
    <div class="card">
    <% img_uri = GetGooglePhotosDataService.new(restaurant[1][index].dig("photos").first.dig("name")).call %>
      <% if restaurant[1][index].dig("photos").present? %>
        <%= image_tag img_uri, class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= restaurant[1][index]["displayName"]["text"] %></h5>
        <p class="card-text"><%= restaurant[1][index]["formattedAddress"] %></p>
        <p class="card-text">Rating: <%= restaurant[1][index]["rating"] %></p>
        <a href="<%= restaurant_path(restaurant) %>" class="card-btn btn-primary">View Restaurant</a>
      </div>
    </div>
  <% end %>
</div>
