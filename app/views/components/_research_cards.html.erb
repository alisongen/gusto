<div class="card-container">
  <% restaurants.each do |restaurant| %>
    <%# Et pour chaque "restaurant", j'affiche les infos (name et address), la possibilitÃ© de l'ajouter Ã  une collection via l'icon %>
    <%# et le lien cers la show du restaurant %>
    <div class="card">
      <%= image_tag restaurant.images.sample, class: "card-img-top" if restaurant.images.attached? %>
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text"><%= restaurant.address %></p>
        <p class="card-text">Rating: <%= restaurant.rating %></p>
        <a href="<%= restaurant_path(restaurant) %>" class="card-btn btn-primary">View Restaurant</a>
      </div>
    </div>
  <% end %>
</div>
