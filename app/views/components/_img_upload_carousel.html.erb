<div id="carouselUpload" class="carousel slide mx-auto" style="width: 90%; margin-top: 20px;" data-bs-ride="carousel">
  <div id="carousel-container" class="carousel-inner">
    <% saved_restaurant.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= "active" if index.zero? %>" style="height: 250px;">
        <%= cl_image_tag photo.key, class: "carrousel-upload d-block w-100 h-100" %>
        <%= link_to restaurant_path(photo, @saved_restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "bouton-icon btn-position" do %>
          <i class="fa-solid fa-trash-can" style="color:white;"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
