<h1>Create new collection</h1>
<%= simple_form_for(@collection) do |f| %>
  <%= f.input :name, label: 'Name' %>
  <div class="colors-iteration">
    <% @colors.each_with_index do |color, index| %>
      <label for="color_<%= index %>" style="background-color:<%= color %>;" class="color-button">
        <input type="radio" id="color_<%= index %>" name="collection[color]" value="<%= color %>" class="input-none">
      </label>
    <% end %>
  </div>
  <%= f.submit 'Create' %>
<% end %>
