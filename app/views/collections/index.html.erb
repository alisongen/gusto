<h1 class="text-center py-3 fw-bold">Collections</h1>
<div data-controller="showcat" class="relative">
  <div class="row">
    <div class="col-12 d-flex justify-content-between mx-auto my-3" style="width: 85%;">
      <%= link_to "All", collections_path(),
      data: { action: "click->showcat#toggle", showcat_target: "allLink", turbo_stream: true },
      class: "btn-link no-padding d-flex align-items-center justify-content-center" %>
      <button data-action="click->showcat#toggle" data-showcat-target="colLink" class="btn-no-link no-padding d-flex align-items-center justify-content-center">Collections</button>
      <button data-action="click->showcat#toggle" data-showcat-target="friendLink" class="btn-no-link no-padding d-flex align-items-center justify-content-center">Friends</button>
    </div>
  </div>

  <div id="mapbox-collection" class="mx-auto rounded-5" style="width: 85%; height: 350px; box-shadow: 0 4px 7px rgba(0, 0, 0, 0.3);"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <div id="collection-window" class="d-none" data-showcat-target="all">
    <% @restaurants.each do |restaurant| %>
      <div class="card-vignette rounded-5 mx-auto border border-1 my-3">
        <p><%= link_to restaurant.name, restaurant_path(restaurant),  class: "text-deco-none" %></p>
        <p><%= restaurant.rating %> </p>
        <p><%= restaurant.address %> </p>
      </div>
    <% end %>
  </div>


  <div id="collection-filters" class="d-none absolute bg-white mx-auto d-flex flex-column align-items-center my-2 rounded-5" style="width: 60%; box-shadow: 0 4px 7px rgba(0, 0, 0, 0.3);" data-showcat-target="collections">
    <% @collections.each_with_index do |collection, index| %>
      <% if (collection.saved_restaurants.present?)%>
        <%= link_to collection.name, collections_path(name: collection.name), data: { turbo_stream: true }, class: , class: "btn-collection no-padding d-flex align-items-center justify-content-center my-2 rounded-5"  %>
        <div class="d-none">
          <% collection.saved_restaurants.each do |saved_restaurant| %>
            <p><%= link_to saved_restaurant.restaurant.name, restaurant_path(saved_restaurant.restaurant) %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>



  <div class="d-none" data-showcat-target="friends">
    <% if @frienships %>
      <% @frienships.each do |friendship| %>
        <div class="card-vignette rounded-5 mx-auto border border-1 my-3">
          <p><%= friendship.user.username %></p>
        </div>
      <% end %>
    <% else %>
      <p>No friends</p>
    <% end %>
  </div>

</div>
