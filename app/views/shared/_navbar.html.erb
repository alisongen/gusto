<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid d-flex align-items-center">
    <% if user_signed_in? %>
      <%  if (current_user.avatar.attached?) %>
        <%= link_to "/dashboard/", class: "navbar-brand" do %>
          <%= cl_image_tag current_user.avatar.key, class: "avatar", alt: "avatar" %>
        <% end %>
      <% else %>
        <%= link_to "/dashboard/", class: "navbar-brand" do %>
          <%= image_tag "https://png.pngtree.com/png-vector/20221018/ourmid/pngtree-master-chef-logo-illustration-png-image_6351381.png", class: "avatar", alt: "avatar" %>
        <% end %>
      <% end %>
    <% end %>

    <div class="d-flex justify-content-center flex-grow-1">
        <ul class="gap-4 navbar-nav">
            <li class="nav-item active">
              <h1>GUSTO</h1>
            </li>
        </ul>
      </div>

    <div class="d-flex justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Disconnect", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
