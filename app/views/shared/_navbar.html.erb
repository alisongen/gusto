    <!-- Section centrale avec logo -->
    <div class="navbar-brand">
      <%= image_tag "logoGusto.svg", alt: "Logo Gusto" %>
    </div>

    <!-- Si l'utilisateur est connecté -->
    <% if user_signed_in? %>
        <!-- Lien vers le dashboard avec l'avatar de l'utilisateur -->
        <%= link_to "/dashboard/", class: "navbar-profil" do %>
          <div class="user-avatar" style="background-color: <%= current_user.avatar_color = "#FFBD33" %>;">
            <%= current_user.first_name[0] %><%= current_user.last_name[0] %>
          </div>
          <%#= cl_image_tag current_user.avatar.key, class: "avatar", alt: "avatar" %>
        <% end %>
      <!-- Si l'utilisateur n'est pas connecté -->
      <%# else %>
        <%#= link_to "/dashboard/", class: "navbar-profil" do %>
          <%#= image_tag "https://png.pngtree.com/png-vector/20221018/ourmid/pngtree-master-chef-logo-illustration-png-image_6351381.png", class: "avatar", alt: "avatar" %>
        <% end %>
      <%# end %>
    <%# end %>

