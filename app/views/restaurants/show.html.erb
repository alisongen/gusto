<div class="restaurant-header">
  <h1><%= @restaurant.name %></h1>
  <%= link_to "#", data: { bs_toggle: "modal", bs_target: "#collectionModal" }, class: "bouton-icon " do %>
    <i class="fa-solid fa-bookmark" style="color: white;"></i>
  <% end %>
</div>
<div class="restaurant-image">
  <%= render "components/image_carousel", image: @image %>
</div>
<%= render "components/restaurant_details" %>

<!-- Modal pour choisir la catégorie qui s'ouvre en mode pop-up -->
<div class="modal fade" id="collectionModal" tabindex="-1" aria-labelledby="collectionModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="collectionModalLabel">Choose a collection</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: restaurant_collection_path(@collections, restaurant_id: @restaurant.id), method: :patch, local: true do |f| %>
          <div class="mb-3">
              <% @collections.each do |collection| %>
                <% if (SavedRestaurantsCollection.where(saved_restaurant_id: @saved_restaurant.id, collection_id: collection.id).present?) %>
                  <label for="collection"><%= collection.name %></label>
                  <input id="<%= collection.id %>" name="<%= collection.name %>" type="checkbox" value="<%= collection.id %>" checked/>
                <% else %>
                  <label for="collection"><%= collection.name %></label>
                  <input id="<%= collection.id %>" name="<%= collection.name %>" type="checkbox" value="<%= collection.id %>"/>
                <% end %>
              <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

